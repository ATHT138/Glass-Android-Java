<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- White background color -->
    <solid android:color="#F3EFEF" />

    <!-- Black border -->
    <stroke
        android:width="2dp"
    android:color="#000000" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="20dp"
        android:right="8dp"
        android:bottom="20dp" />

</shape>
