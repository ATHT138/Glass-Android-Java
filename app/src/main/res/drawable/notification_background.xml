    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Gray background color -->
    <solid android:color="#E8E8E8" /> <!-- You can adjust the color code as needed -->

    <!-- Padding -->
