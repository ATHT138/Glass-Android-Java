<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4sp">

    <ImageView
        android:id="@+id/imgProfilechat"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:background="@drawable/ic_background_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/tvMessagechat"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvMessagechat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4sp"
        android:layout_marginLeft="4sp"
        android:background="@drawable/background_received_message"
        android:padding="12sp"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/imgProfilechat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75"/>

    <TextView
        android:id="@+id/tvDatetimechat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp"
        android:textColor="@color/hintText"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tvMessagechat"
        app:layout_constraintTop_toBottomOf="@id/tvMessagechat"/>

</androidx.constraintlayout.widget.ConstraintLayout>